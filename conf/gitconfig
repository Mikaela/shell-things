[alias]
	cleandi = clean -di
	cleandix = clean -dix
	# From http://progit.org/book/ch2-7.html
	last = cat-file commit HEAD
	mergen = merge --no-ff
	pulln = pull --no-ff
	pullen = pull --no-ff
	verify = verify-commit HEAD

