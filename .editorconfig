root = true

[*]
# Future: https://github.com/editorconfig/editorconfig/issues/89
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# specific to Mikaela/shell-things
[gitconfig]
indent_style = tab

[.{git*,mailmap}]
indent_style = tab

[*.{reg,bat,ahk}]
end_of_line = crlf
